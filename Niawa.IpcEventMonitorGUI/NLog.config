<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!-- 
  See http://nlog-project.org/wiki/Configuration_file 
  for information on customizing logging rules and outputs.
   -->
  <targets>
    <target name="logfile" xsi:type="File" fileName="log\log_${date:format=yyyyMMdd}.log.txt" layout="${time} ${level} ${message}"/>
    <target name="logfileWarn" xsi:type="File" fileName="log\log_${date:format=yyyyMMdd}.warn.txt" layout="${time} ${level} ${message}"/>
    <target name="logfileError" xsi:type="File" fileName="log\log_${date:format=yyyyMMdd}.error.txt" layout="${time} ${level} ${message}"/>
    <target name="console" xsi:type="Console" layout="${time} ${message}" />
    <target name="consoleLevel" xsi:type="Console" layout="${time} ${level} ${message}" />
    <target xsi:type="EventLog"
         name="event"
         layout="${message}"
         source="NiawaNotify"
         eventId="501"
         log="Application"
                     />
  </targets>
  <rules>
    <logger name="*" minlevel="Error" writeTo="event" />
    <logger name="*" minlevel="Info" maxlevel="Info" writeTo="console" />
    <logger name="*" minlevel="Warn" writeTo="consoleLevel" />
    <logger name="*" minlevel="Info" writeTo="logfile"/>
    <logger name="*" minlevel="Warn" maxlevel="Warn" writeTo="logfileWarn"/>
    <logger name="*" minlevel="Error" maxlevel="Error" writeTo="logfileError"/>
  </rules>

</nlog>